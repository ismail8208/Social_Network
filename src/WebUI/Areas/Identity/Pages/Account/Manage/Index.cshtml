@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

			<div>
				<img src="~/api/Images/@Model.ImageUrl" alt="User Image" style="border:1px solid #03BFCB;border-radius: 50%;padding: 7px;width: 200px;height: 200px;margin:10px" />
			</div>
			<div class="form-floating mb-3">
				<input asp-for="Input.ProfileImage" class="form-control"  />
				<label asp-for="Input.ProfileImage" class="form-label"></label>
				<span asp-validation-for="Input.ProfileImage" class="text-danger"></span>

			</div>


            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

			<div class="form-floating mb-3">
				<input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your first name." />
				<label asp-for="Input.FirstName" class="form-label"></label>
				<span asp-validation-for="Input.FirstName" class="text-danger"></span>
			</div>

			<div class="form-floating mb-3">
				<input asp-for="Input.LastName" class="form-control" placeholder="Please enter your last name." />
				<label asp-for="Input.LastName" class="form-label"></label>
				<span asp-validation-for="Input.LastName" class="text-danger"></span>
			</div>

			<div class="form-floating mb-3">
				<input asp-for="Input.specialization" class="form-control" placeholder="Please enter your specialization." />
				<label asp-for="Input.specialization" class="form-label"></label>
				<span asp-validation-for="Input.LastName" class="text-danger"></span>
			</div>

			<div class="form-floating mb-3">
				<input asp-for="Input.Summary" class="form-control" placeholder="Please enter your Summary" />
				<label asp-for="Input.Summary" class="form-label"></label>
				<span asp-validation-for="Input.Summary" class="text-danger"></span>
			</div>



			<button id="update-profile-button" type="submit" class="w-100 btn btn-lg" style="background-color: #00ADB5; color:white">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
