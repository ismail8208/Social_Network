@using Microsoft.AspNetCore.Identity
@using MediaLink.Infrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav" style="color:#EEE">
@if (SignInManager.IsSignedIn(User))
{
		<li class="nav-item" style="color:#EEE">
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
		<li class="nav-item" >
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" >
				<button id="logout" type="submit" class="nav-link btn btn-link  border-0" style="color:#EEE">Logout</button>
        </form>
    </li>
}
else
{
		<li>
			<a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register" style="color:#EEE">Register</a>
    </li>
		<li class="nav-item">
			<a class="nav-link " id="login" asp-area="Identity" asp-page="/Account/Login" style="color:#EEE">Login</a>
    </li>
}
</ul>
